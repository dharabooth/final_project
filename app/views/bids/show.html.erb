<div>
  <div>
    <h1>
      Bid #<%= @the_bid.id %> details
    </h1>

    <div>
      <div>
        <a href="/bids">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_bid/<%= @the_bid.id %>">
          Delete bid
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Bid amount
      </dt>
      <dd>
        <%= @the_bid.bid_amount %>
      </dd>

      <dt>
        Auctioner
      </dt>
      <dd>
        <%= @the_bid.auctioner_id %>
      </dd>

      <dt>
        Buyer
      </dt>
      <dd>
        <%= @the_bid.buyer_id %>
      </dd>

      <dt>
        Department
      </dt>
      <dd>
        <%= @the_bid.department_id %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @the_bid.title %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @the_bid.price %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_bid.description %>
      </dd>

      <dt>
        Deadline
      </dt>
      <dd>
        <%= @the_bid.deadline %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bid.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bid.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit bid
    </h2>

    <form action="/modify_bid/<%= @the_bid.id %>"  method="post" >
      <div>
        <label for="bid_amount_box">
          Bid amount
        </label>

        <input type="text" id="bid_amount_box" name="query_bid_amount" value="<%= @the_bid.bid_amount %>">
      </div>

      <div>
        <label for="auctioner_id_box">
          Auctioner
        </label>

        <input type="text" id="auctioner_id_box" name="query_auctioner_id" value="<%= @the_bid.auctioner_id %>">
      </div>

      <div>
        <label for="buyer_id_box">
          Buyer
        </label>

        <input type="text" id="buyer_id_box" name="query_buyer_id" value="<%= @the_bid.buyer_id %>">
      </div>

      <div>
        <label for="department_id_box">
          Department
        </label>

        <input type="text" id="department_id_box" name="query_department_id" value="<%= @the_bid.department_id %>">
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_bid.title %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_bid.price %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_bid.description %>">
      </div>

      <div>
        <label for="deadline_box">
          Deadline
        </label>

        <input type="date" id="deadline_box" name="query_deadline" value="<%= @the_bid.deadline %>">
      </div>

      <button>
        Update bid
      </button>
    </form>
  </div>
</div>

<hr>
